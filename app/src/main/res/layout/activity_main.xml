<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colormy"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">
    <TextView
        android:paddingTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="CGPA CALCULATOR"
        android:textSize="20sp"
        android:layout_marginLeft="100dp"
        >

    </TextView>
    <RadioGroup
        android:id="@+id/groupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="180dp"
        android:textSize="24sp">

        <RadioButton
            android:id="@+id/radioBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cgpa_text"
            android:textSize="20sp"
            tools:ignore="TouchTargetSizeCheck">

        </RadioButton>

    </RadioGroup>

    <Button
        android:id="@+id/Semi1_cgpa"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:text="@string/button_text"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:background="@drawable/custom_button"
        android:textStyle="bold"></Button>
    <TextView
        android:layout_marginTop="300dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By: Sourabh Roy Biswes"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"></TextView>


    <TextView
        android:id="@+id/resultText"
        android:layout_width="211dp"
        android:layout_height="114dp"
        android:layout_marginTop="250dp"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>



</LinearLayout>
